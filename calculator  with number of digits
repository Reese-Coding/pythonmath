def addingmachine(a,b,c):
    return a+b+c
def smallermachine(a,b,c):
    return a-b-c
def tripledmachine(a,b,c):
    return a*b*c
def dividermachine(a,b,c):
    return a/b/c
if __name__=='__main__':
    print("this is a program that does any operation that you want on any three numbers")

    firstnumber = int(input("please write your first number: "))
    secondnumber = int(input ("please enter your second number: "))
    thirdnumber = int(input ("please enter your third number: "))
    operation = int (input("please prees 1 for addition 2 for subtraction 3 for mutiplecation 4 for divison: "))

    if operation == 1 :
        answer = addingmachine(firstnumber, secondnumber, thirdnumber)
        print("your answer is: ")
        print(answer)
        string=str(answer)
        print(len(string))
    elif operation == 2:
        answer= smallermachine(firstnumber,secondnumber,thirdnumber)
        print("your answer is: ")
        print(answer)
        string=str(answer)
        print(len(string))
    elif operation == 3:
        answer = tripledmachine(firstnumber, secondnumber, thirdnumber)
        print("your answer is: ")
        print(answer)
        string=str(answer)
        print(len(string))

    else:
        answer = dividermachine(firstnumber, secondnumber, thirdnumber)
        print("your answer is: ")
        print(answer)
        string=str(answer)
        print(len(string))



